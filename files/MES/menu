local function render()
term.setBackgroundColour(colours.black)
term.clear()
term.setBackgroundColour(colours.white)
term.setTextColour(colours.black)
center(3,"             ")
center(4,"     MES     ")
center(5,"             ")
center(7,"Press the number above either option")
term.setCursorPos(5,9)
print("     [1]     ")
term.setCursorPos(5,10)
print("    Disk     ")
term.setCursorPos(5,11)
print("             ")
term.setCursorPos(33,9)
print("     [2]     ")
term.setCursorPos(33,10)
print("   Shutdown  ")
term.setCursorPos(33,11)
print("             ")
end

while true do render()
  local event,key = os.pullEvent("key")
  if key == keys.one then shell.run("/disk/game")
  elseif keys == keys.two then os.shutdown()
  else end
  end
